{
  "name": "web3-whac-a-mole-contracts",
  "version": "1.0.0",
  "description": "Smart contracts for Web3 Whac-A-Mole game on Ape Chain",
  "scripts": {
    "compile": "hardhat compile",
    "test": "hardhat test",
    "deploy:testnet": "hardhat run scripts/deploy.js --network apechain-testnet",
